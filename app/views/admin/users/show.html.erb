<div id="app">
  <%= render partial: "layouts/admin/sidebar" %>
  <div id="main" class="layout-navbar">
    <%= render partial: "layouts/admin/navbar" %>
    <div id="main-content">
      <div class="container-fluid flex-grow-1 container-p-y">
        <div class="row">
          <div class="col-sm-6 col-md-8 col-lg-7 col-xl-8">
            <h4 class="font-weight-bold py-3 mb-4">
              #Id: <%= @user.id %> - <%= @user.name %><br>
            </h4>
          </div>
          <div class="col-sm-6 col-md-4 col-lg-5 col-xl-4">
            <div class="py-1 px-3 ui-bordered">
              <div class="text-muted small">Criado Em</div>
              <div class="font-weight-semibold"><%= I18n.l(@user.created_at, format: :long) %></div>
            </div>
          </div>
        </div>
        <div class="">
          <div class="card table-responsive">
            <table class="table card-table">
              <thead class="thead-light">
                <tr data-sort-method="none">
                  <th>Campo</th>
                  <th>Descrição</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Nome</td>
                  <td><b><%= @user.name %></b></td>
                </tr>
                <tr>
                  <td>E-mail</td>
                  <td><b><%= @user.email %></b></td>
                </tr>
                <tr>
                  <td>Criado Em</td>
                  <td><%= I18n.l(@user.created_at, format: :long) %></td>
                </tr>
                <tr>
                  <td>Editado Em</td>
                  <td><%= I18n.l(@user.updated_at, format: :long) %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="d-flex justify-content-start mt-4 mb-5">
          <a class="btn btn-primary rounded-pill" href="<%= admin_users_path %>">Voltar</a>
        </div>
      </div>
      <%= render partial: "layouts/admin/footer" %>
    </div>
  </div>
</div>
