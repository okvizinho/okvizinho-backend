<% flash.each do |key, value|%>
  <% unless key == "devise" %>
    <div class="relative text-center">
      <h1 class="<%= css_class_for_devise(key) %>"><%= value %></h1>
    </div>
  <% end %>
<% end %>

<% if resource.errors.any? %>
  <% resource.errors.full_messages.each do |msg| %>
    <div class="relative text-center">
      <h1 class="text-red-500"><%= msg %></h1>
    </div>
  <% end %>
<% end %>
