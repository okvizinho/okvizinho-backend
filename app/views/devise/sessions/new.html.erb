  <%= stylesheet_link_tag "mazer-assets/css/pages/auth.css" %>
<div id="auth">
  <div class="row h-100">
    <div class="col-lg-5 col-12">
      <div id="auth-left">
        <div class="auth-logo">
          <a href="index.html"><%= image_tag "logo.png", class: "", alt: "Logo" %></a>
        </div>
        <h1 class="auth-title">Painel Admin</h1>
        <p class="auth-subtitle mb-5">Informe seus dados abaixo para acessar</p>
        <%= render partial: "devise/shared/error_messages" %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <div class="form-group position-relative has-icon-left mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "form-control form-control-xl" %>
            <div class="form-control-icon">
              <i class="bi bi-person"></i>
            </div>
          </div>
          <div class="form-group position-relative has-icon-left mb-4">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Senha", class: "form-control form-control-xl" %>
            <div class="form-control-icon">
              <i class="bi bi-shield-lock"></i>
            </div>
          </div>
          <div class="form-check form-check-lg d-flex align-items-end">
            <%= f.check_box :remember_me, class: "form-check-input me-2" %>
            <label class="form-check-label text-gray-600" for="flexCheckDefault">
              Manter Conectado
            </label>
          </div>
          <%= f.submit "Entrar", class: "btn btn-primary btn-block btn-lg shadow-lg mt-5" %>
        <% end %>
        <div class="text-center mt-5 text-lg fs-4">
          <p><a class="font-bold" href="auth-forgot-password.html">Recuperar Senha</a></p>
        </div>
      </div>
    </div>
    <div class="col-lg-7 d-none d-lg-block">
      <div id="auth-right">
      </div>
    </div>
  </div>
</div>
